<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_for_common_device_off"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_12"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLength="10"
                android:maxLines="1"
                android:text="顶灯"
                android:textColor="#3D3D3D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_address_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv_address_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="1dp"
                android:text="客厅"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/dp_10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_12"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="开启"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/dp_10" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="@dimen/sp_12"
            android:layout_marginRight="9dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:src="@drawable/page_index_def_img" />

            <CheckBox
                android:id="@+id/iv_state"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:button="@drawable/state_bg"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ac_on"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_device_id"
                android:visibility="gone"
                style="@style/MyTextViewNoClickEffect"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:padding="5dp"
                android:text="0"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_device_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_device_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_device_logo"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="客厅"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/sp_16"
            android:layout_marginTop="6dp"
            android:text="@string/page_index_main_index_common_euipment_edit_labe_st"
            android:textColor="#3D3D3D"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>