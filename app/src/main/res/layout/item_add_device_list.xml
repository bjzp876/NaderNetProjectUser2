<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <RelativeLayout
        android:id="@+id/rl_device_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/add_room_select_equipment_sv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            fresco:placeholderImage="@drawable/page_index_equipment"
            fresco:failureImage="@drawable/page_index_equipment"
            fresco:actualImageScaleType="centerInside" />

        <TextView
            android:id="@+id/add_room_select_equipment_namew_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/add_room_select_equipment_sv"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/page_index_bleck_3"
            android:text="设备名称" />
        <TextView
            android:id="@+id/add_room_select_equipment_room_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/add_room_select_equipment_sv"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="19dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@color/page_index_bleck_9"
            android:text="房间名称" />
        <ImageView
            android:id="@+id/add_room_select_equipment_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/page_index_add_room_select_equipment_check_selector"
            />

    </RelativeLayout>
    <View
        android:id="@+id/add_room_select_equipment_lin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/page_index_lin_color"
        ></View>
</LinearLayout>