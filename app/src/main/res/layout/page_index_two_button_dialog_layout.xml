<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/page_index_whit_rounded_rectangle_shape"
        >
        <TextView
            android:id="@+id/page_index_two_button_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="提示信息"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/page_index_two_button_dialog_determine_btn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textColor="#1FC88B"
            android:textSize="18sp"
            android:text="确定"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/page_index_two_button_dialog__cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:textColor="#1FC88B"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:text="取消"
        android:gravity="center"
        android:background="@drawable/page_index_whit_rounded_rectangle_shape"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>