<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">
    <include layout="@layout/layout_title"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:text="全天"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="结束"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="18:00"
                        android:textColor="@color/text_green"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:id="@+id/ll_end"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"
                        android:layout_below="@id/tv_end"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.nader.intelligent.view.wheelview.WheelView
                            android:id="@+id/wv3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:isLoop="false"
                            app:itemVisibleNum="3"
                            app:lineColor="@color/line_color"
                            app:lineSpaceingDimens="15dp"
                            app:textColorCenter="@color/text_black"
                            app:textColorOuter="@color/text_gray"
                            app:textSizeCenter="@dimen/sp_16"
                            app:textSizeOuter="@dimen/sp_12"
                            app:wheelGravity="center" />

                        <com.nader.intelligent.view.wheelview.WheelView
                            android:id="@+id/wv4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:isLoop="false"
                            app:itemVisibleNum="3"
                            app:lineColor="@color/line_color"
                            app:lineSpaceingDimens="15dp"
                            app:textColorCenter="@color/text_black"
                            app:textColorOuter="@color/text_gray"
                            app:textSizeCenter="@dimen/sp_16"
                            app:textSizeOuter="@dimen/sp_12"
                            app:wheelGravity="center" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_14"
                        android:text="开始"/>
                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_green"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textSize="@dimen/sp_12"
                        android:text="08:00"/>
                    <LinearLayout
                        android:id="@+id/ll_start"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"
                        android:orientation="horizontal"
                        android:layout_below="@id/tv_start"
                        android:visibility="gone">
                        <com.nader.intelligent.view.wheelview.WheelView
                            android:id="@+id/wv1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:itemVisibleNum="3"
                            app:textColorCenter="@color/text_black"
                            app:lineSpaceingDimens="15dp"
                            app:isLoop="false"
                            app:lineColor="@color/line_color"
                            app:textColorOuter="@color/text_gray"
                            app:textSizeCenter="@dimen/sp_16"
                            app:textSizeOuter="@dimen/sp_12"
                            app:wheelGravity="center"/>
                        <com.nader.intelligent.view.wheelview.WheelView
                            android:id="@+id/wv2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:itemVisibleNum="3"
                            app:textColorCenter="@color/text_black"
                            app:lineSpaceingDimens="15dp"
                            app:isLoop="false"
                            app:lineColor="@color/line_color"
                            app:textColorOuter="@color/text_gray"
                            app:textSizeCenter="@dimen/sp_16"
                            app:textSizeOuter="@dimen/sp_12"
                            app:wheelGravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@color/line_color"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_scene_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_20">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:text="重复"/>
                <TextView
                    android:id="@+id/tv_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_12"
                    android:text="不重复"/>
            </RelativeLayout>

</LinearLayout>